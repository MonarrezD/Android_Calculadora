<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text"
        android:layout_alignParentEnd="true"
        android:text=""
        android:autoSizeTextType="uniform"
        android:textAlignment="textEnd"
        android:textColor="@color/GRIS"
        android:textSize="64dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:paddingVertical="16dp"
        android:id="@+id/text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="270dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/design_default_color_error"
                android:layout_margin="12dp"
                android:id="@+id/borrar"
                android:backgroundTint="#FFFFFF"
                android:onClick="pulsarBorrar"
                android:text="C" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/dividir"
                android:onClick="pulsarDivision"
                android:textColor="@color/VERDE"
                android:backgroundTint="#F2FFFFFF"
                android:text="/" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/siete"
                android:onClick="pulsarSiete"
                android:text="7" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:onClick="pulsarOcho"
                android:id="@+id/ocho"
                android:text="8" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/nueve"
                android:onClick="pulsarNueve"
                android:text="9" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:id="@+id/multiplicar"
                android:onClick="pulsarMultiplicacion"
                android:textColor="@color/VERDE"
                android:backgroundTint="#F2FFFFFF"
                android:text="x" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/cuatro"
                android:onClick="pulsarCuatro"
                android:text="4" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/cinco"
                android:onClick="pulsarCinco"
                android:text="5" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/seis"
                android:onClick="pulsarSeis"
                android:text="6" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/sumar"
                android:onClick="pulsarSuma"
                android:textColor="@color/VERDE"
                android:backgroundTint="#F2FFFFFF"
                android:text="+" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/uno"
                android:onClick="pulsarUno"
                android:text="1" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/dos"
                android:onClick="pulsarDos"
                android:text="2" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/tres"
                android:onClick="pulsarTres"
                android:text="3" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:layout_margin="12dp"
                android:id="@+id/restar"

                android:onClick="pulsarRestar"
                android:textColor="@color/VERDE"
                android:backgroundTint="#F2FFFFFF"
                android:text="-" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="20dp"
                android:textColor="@color/design_default_color_error"
                android:layout_margin="12dp"
                android:id="@+id/vaciar"
                android:onClick="pulsarVaciar"
                android:backgroundTint="#FFFFFF"
                android:text="AC" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/cero"
                android:onClick="pulsarCero"
                android:text="0" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/GRIS"
                android:backgroundTint="@color/white"
                android:layout_margin="12dp"
                android:id="@+id/coma"
                android:onClick="pulsarComa"
                android:text="." />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_margin="12dp"
                android:id="@+id/resultado"
                android:onClick="pulsarResultado"
                android:textColor="@color/VERDE"
                android:textSize="32dp"
                android:backgroundTint="#F2FFFFFF"
                android:text="=" />

        </LinearLayout>


    </LinearLayout>



</RelativeLayout>